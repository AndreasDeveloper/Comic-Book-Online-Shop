        <span class="screen-reader-text">Menu</span>
    </button>
    <nav role="navigation" class="menu">
        <a href="/" class="logotype">COMIC<span>BOOK</span></a> <!-- LOGO -->
        <div class="overflow-container">
            <div class="user-mini-nav"> <!-- Small user nav -->
                    <a href="/user-profile/<%= currentUser.username.toLowerCase() %>">
                        <div class="user-image-wrap">
                            <div class="user-image-wrap__circle-1"></div>
                            <div class="user-image-wrap__circle-2"></div>
                            <img data-lazy="<%= currentUser.image %>" alt="Users Image" class="user-image-wrap__image">
                        </div>
                    </a>
                    <h2 class="user-name"><%= currentUser.username %></h2>
            </div>
            <ul class="menu-dropdown"> <!-- Navigation elements -->
                <li><a href="/" class="slide-effect">Home</a><i class="icon ion-ios-home menu-i"></i></li>
                <li><a href="/shop" class="slide-effect">Shop</a><i class="icon ion-ios-cash menu-i"></i></li>
                <li><a href="#" class="slide-effect">Wishlist</a><i class="icon ion-ios-heart menu-i"></i></li>
                <li><a href="/settings/<%= currentUser.username.toLowerCase() %>" class="slide-effect">Settings</a><i class="icon ion-ios-settings menu-i"></i></li>
            </ul>
            <div class="log-out">
                <a href="/logout" class="log-out__text"><i class="icon ion-ios-log-out"></i>Log Out</a>
            </div>
        </div>
    </nav>
</div>            
<!-- SIDE NAVIGATION | END -->

