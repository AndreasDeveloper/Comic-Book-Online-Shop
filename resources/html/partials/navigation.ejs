                    <div class="user-list__single-button">
                        <a href="#" class="user-list__notifications">Notifications &rarr;</a>
                    </div>
                    </ul>
                </div>
            </div>
            <!-- NOTIFICATIONSS | END-->
            <div class="user-nav__user">
                    <% if (currentUser) { %>
                    <a href="/user-profile/<%= currentUser.username.toLowerCase() %>" class="user-nav__link-wrap">
                        <img data-lazy="<%= currentUser.image %>" alt="User Photo" class="user-nav__user-photo">
                        <span class="user-nav__user-name"><%= currentUser.username %></span>
                    </a>
                    <% } %>
            </div>
        </div>
    </div>
</div>
<!-- TOP NAVIGATION | END -->
