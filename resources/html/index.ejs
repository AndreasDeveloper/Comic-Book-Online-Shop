<!DOCTYPE html>
<html lang="en" class="openNav">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://unpkg.com/ionicons@4.4.4/dist/css/ionicons.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Raleway:300,400,500,700" rel="stylesheet">
    <title>Comic Book - Shop</title>
</head>
<body>
    
    <!-- SIDE NAVIGATION | START -->
    <div class="primary-nav">
        <button href="#" class="hamburger open-panel nav-toggle active"> <!-- Hamburger icon -->
            <span class="screen-reader-text">Menu</span>
        </button>
        <nav role="navigation" class="menu">
            <a href="#" class="logotype">COMIC<span>BOOK</span></a> <!-- LOGO -->
            <div class="overflow-container">
                <div class="user-mini-nav"> <!-- Small user nav -->
                    <a href="/user-profile">
                    <div class="user-image-wrap">
                        <div class="user-image-wrap__circle-1"></div>
                        <div class="user-image-wrap__circle-2"></div>
                        <img data-lazy="../img/user-1.jpg" alt="Users Image" class="user-image-wrap__image">
                    </div>
                    </a>
                    <h2 class="user-name">AndreasDEV</h2>
                </div>
                <ul class="menu-dropdown"> <!-- Navigation elements -->
                    <li><a href="#" class="slide-effect">Home</a><i class="icon ion-ios-home menu-i"></i></li>
                    <li><a href="#" class="slide-effect">Shop</a><i class="icon ion-ios-cash menu-i"></i></li>
                    <li><a href="#" class="slide-effect">Wishlist</a><i class="icon ion-ios-heart menu-i"></i></li>
                    <li><a href="#" class="slide-effect">Settings</a><i class="icon ion-ios-settings menu-i"></i></li>
                </ul>
                <div class="log-out">
                    <h3 class="log-out__text"><i class="icon ion-ios-log-out"></i>Log Out</h3>
                </div>
            </div>
        </nav>
    </div>            
    <!-- SIDE NAVIGATION | END -->

    <!-- TOP NAVIGATION | START -->
    <div class="secondary-nav-wrap">
        <div class="secondary-nav">
            <nav role="navigation" class="top-menu">
                <form action="#" class="search-form">
                    <input type="text" class="search-form__input" placeholder="Search Comics, Issues . .">
                    <button type="submit" class="search-form__button"><i class="icon ion-ios-search search-form__icon"></i></button>
                </form>
            </nav>
            <div class="user-nav">
                <!-- WISHLIST | START -->
                <div class="user-nav__icon-box">
                    <i class="icon ion-ios-heart-empty user-nav__icon"></i>
                    <span class="user-nav__notification">0</span>
                    <div class="user-list">
                        <ul class="user-list__list">
                            <h2 class="user-list__empty">Your Wishlist is Empty</h2>
                            <!--
                            <li>   
                                <a href="#" class="user-list__link">
                                    <figure class="user-list__fig">
                                        <img data-lazy="../img/spider-man/cover-1.jpg" alt="Item 1">
                                    </figure>
                                    <div class="user-list__data">
                                        <h3 class="user-list__name">Spider-Man Vs. Venom</h3>
                                        <h4 class="user-list__price">&dollar; 45</h4>
                                    </div>
                                    <div class="user-list__remove"><i class="icon ion-ios-close"></i></div>
                                </a>
                            </li>
                        -->
                        <div class="user-list__single-button">
                            <a href="#" class="user-list__wishlist">Wishlist &rarr;</a>
                        </div>
                        </ul>
                    </div>
                </div>
                <!-- WISHLIST | END -->
                <!-- SHOPPING CART | START -->
                <div class="user-nav__icon-box">
                    <i class="icon ion-ios-cart user-nav__icon"></i>
                    <span class="user-nav__notification">0</span>
                    <div class="user-list">
                        <ul class="user-list__list">
                            <li>
                                <a href="#" class="user-list__link">
                                    <figure class="user-list__fig">
                                        <img data-lazy="../img/spider-man/cover-1.jpg" alt="Item 1">
                                    </figure>
                                    <div class="user-list__data">
                                        <h3 class="user-list__name">Spider-Man Vs. Venom</h3>
                                        <h4 class="user-list__price">&dollar; 45</h4>
                                    </div>
                                    <div class="user-list__remove"><i class="icon ion-ios-close"></i></div>
                                </a>
                            </li>
                        </ul>
                        <div class="user-list__checkout-button">
                            <h3 class="user-list__total">Total: &dollar; 48</h3>
                            <a href="#" class="user-list__checkout">Checkout &rarr;</a>
                        </div>
                    </div>
                </div>
                <!-- SHOPPING CART | END -->
                <!-- NOTIFICATIONS | START -->
                <div class="user-nav__icon-box">
                    <i class="icon ion-ios-notifications-outline user-nav__icon"></i>
                    <span class="user-nav__notification">0</span>
                    <div class="user-list">
                        <ul class="user-list__list">
                            <h2 class="user-list__empty">No Notifications</h2>
                            <!--
                            <li>   
                                <a href="#" class="user-list__link">
                                    <figure class="user-list__fig">
                                        <img data-lazy="../img/spider-man/cover-1.jpg" alt="Item 1">
                                    </figure>
                                    <div class="user-list__data">
                                        <h3 class="user-list__name">Spider-Man Vs. Venom</h3>
                                        <h4 class="user-list__price">&dollar; 45</h4>
                                    </div>
                                    <div class="user-list__remove"><i class="icon ion-ios-close"></i></div>
                                </a>
                            </li>
                        -->
                        <div class="user-list__single-button">
                            <a href="#" class="user-list__notifications">Notifications &rarr;</a>
                        </div>
                        </ul>
                    </div>
                </div>
                <!-- NOTIFICATIONSS | END-->
                <div class="user-nav__user">
                    <img data-lazy="../img/user-1.jpg" alt="User Photo" class="user-nav__user-photo">
                    <span class="user-nav__user-name">AndreasDEV</span>
                </div>
            </div>
        </div>
    </div>
    <!-- TOP NAVIGATION | END -->

    <main>
    <!-- WEBSITE CONTENT -->
    <div class="new-wrapper">
        <!-- SEARCH RESULTS | START -->
        <div class="results">
            <h3 class="results__text">Search results: 10</h3>
        </div>
        <!-- SEARCH RESULTS | END -->
        <!-- SHOP | START -->
        <section class="shop">
            <div class="shop-container">
                <!-- ITEM 1 -->
                <% comicbooks.forEach(comicbook => { %>
                <div class="item">
                    <div class="shop-row shop-row--1"><img data-lazy="<%= comicbook.image %>" alt="Cover 1" class="sp-cover-img"></div>
