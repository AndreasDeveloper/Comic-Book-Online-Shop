<% if (session.wishlist) { %>
    <!-- WISHLIST | START -->
    <div class="user-nav__icon-box">
        <i class="icon ion-ios-heart-empty user-nav__icon"></i>
        <span class="user-nav__notification"><%= session.wishlist.totalQnty %></span>
        <div class="user-list">
            <ul class="user-list__list">
                <% for (const product in session.wishlist.items) { %>
                    <li style="position: relative;">   
                        <a href="#" class="user-list__link">
                            <figure class="user-list__fig">
                                <img data-lazy="<%= session.wishlist.items[product].item.image %>" alt="Item">
                            </figure>
                            <div class="user-list__data">
                                <h3 class="user-list__name"><%= session.wishlist.items[product].item.name %></h3>
                                <h4 class="user-list__price">&dollar; <%= session.wishlist.items[product].item.price %></h4>
                            </div>
                            <a href="/remove-wish/<%= session.wishlist.items[product].item._id %>" class="user-list__remove"><i class="icon ion-ios-close"></i></a>
                        </a>
                    </li>
                <% }; %>
            </ul>
            <div class="user-list__single-button">
                <a href="#" class="user-list__wishlist">Wishlist &rarr;</a>
            </div>
        </div>
    </div>
    <!-- WISHLIST | END -->
<% } else { %>
    <div class="user-nav__icon-box">
        <i class="icon ion-ios-heart-empty user-nav__icon"></i>
        <span class="user-nav__notification">0</span>
        <div class="user-list">
            <ul class="user-list__list">
            </ul>
            <h2 class="user-list__empty">Your Wishlist is Empty</h2>
            <div class="user-list__single-button">
                <a href="#" class="user-list__wishlist">Wishlist &rarr;</a>
            </div>
        </div>
    </div>
<% } %>