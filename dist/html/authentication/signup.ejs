<!DOCTYPE html>
<html lang="en" class="openNav">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://unpkg.com/ionicons@4.4.4/dist/css/ionicons.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Raleway:300,400,500,700" rel="stylesheet">
    <title>Log In - Comicbook</title>
<link href="../../css/main.css" rel="stylesheet"></head>
<body>

    <!-- IMPLEMETING MINI NAVIGATION | TOP ONLY -->
    <% include ../partials/miniNavigation.ejs %>

    <div class="landing-wrapper">
        <!-- SIGN UP SECTION | START -->
        <section class="signup-section">
            <div class="signup-left">
                <div class="signup-left__content">
                    <h2 class="signup-left__content__heading-1">Already a User?</h2>
                    <h3 class="signup-left__content__heading-2">Log in back to discover new comics and start exploring!</h3>
                    <a href="/login" class="btn btn-signup-2">Log In</a>
                </div>
            </div>
            <div class="signup-right">
                <div class="signup-right__content">
                    <h2 class="signup-right__content__heading-1">Sign Up to Comicbook</h2>
                    <form action="/signup" method="POST" class="signup-form">
                        <input type="text" name="username" placeholder="Username" required>
                        <input type="text" name="email" placeholder="Your Email" required>
                        <input type="password" name="password" placeholder="Password" required>
                        <button type="submit" class="btn btn-login">Sign Up</button>
                    </form>
                </div>
            </div>
        </section>
        <!-- SIGN UP SECTION | END -->

        <!-- IMPLEMENTING FOOTER -->
        <% include ../partials/footer.ejs %>
    </div>

<script type="text/javascript" src="../../js/bundle.js"></script></body>
</html>